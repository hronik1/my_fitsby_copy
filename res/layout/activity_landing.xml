<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/or"
        style="@style/CustomLandingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/or"
        android:textSize="18sp" />

    <Button
        android:id="@+id/landing_button_login"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/or"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/landing_login"
        android:textSize="20sp" />

    <Button
        android:id="@+id/landing_button_start"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/or"
        android:layout_alignBottom="@+id/or"
        android:layout_alignLeft="@+id/landing_button_login"
        android:layout_alignRight="@+id/landing_button_login"
        android:gravity="center"
        android:text="@string/landing_start"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_launcher_textlogo" />

    <TextView
        android:id="@+id/motto"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/landing_button_start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/motto"
        android:textSize="20sp" />

</RelativeLayout>