<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment" >

    <!-- TODO: Update blank fragment layout -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_weight="1"
	    android:layout_height="0dp"
	    android:orientation="horizontal" >
	    
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_width="match_parent"	
	        >

	        <ImageView
	            android:id="@+id/profile_user_pic_iv"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:src="@drawable/placeholder"
	            android:adjustViewBounds="true"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:paddingLeft="10dp"
	            android:paddingTop="10dp" />
	        
	        <TextView
	            android:id="@+id/profile_user_pic_upload_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/profile_user_pic_iv"
	            android:layout_alignRight="@+id/profile_user_pic_iv"
	            android:gravity="center_horizontal"
	            android:layout_below="@+id/profile_user_pic_iv"
	            android:text="@string/profile_user_pic_upload_tv" />

	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_width="match_parent"
	        >
	        <TextView
	        	android:id="@+id/profile_user_name_tv"
	        	android:layout_alignParentTop="true"
	        	android:layout_alignParentLeft="true"
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content" />
	        
	        <TextView
	            android:id="@+id/profile_user_email_tv"
	            android:layout_below="@+id/profile_user_name_tv"
	            android:layout_alignLeft="@+id/profile_user_name_tv"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="" />
	        
	        <TextView 
	            android:id="@+id/profile_user_add_friend_tv"
	            android:layout_below="@+id/profile_user_email_tv"
	            android:layout_alignLeft="@+id/profile_user_email_tv" 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content" 
	            android:text="@string/profile_user_add_friend_tv" />
	        
	    </RelativeLayout>
	    	    
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_weight="3"
	    android:orientation="horizontal"
	    android:layout_height="0dp">
	        
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:padding="10dp"
	        >

	        <ImageView
	            android:id="@+id/profile_games_played_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:adjustViewBounds="true"
	            android:src="@drawable/games_icon" />
	        
	        <TextView
	            android:id="@+id/profile_games_played_label_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_above="@+id/profile_games_played_iv"
	            android:gravity="center_horizontal"
	            android:text="@string/profile_games_played_label_tv" />
	        
	        <TextView
	            android:id="@+id/profile_games_played_count_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="center_horizontal"	            
	            android:layout_below="@+id/profile_games_played_iv"
	            android:text="@string/profile_games_played_count_tv" />
 
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:padding="10dp"
	        >
	        	        
	       	<ImageView
	       	    android:id="@+id/profile_games_won_iv"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_centerInParent="true"
	       	    android:adjustViewBounds="true"
	       	    android:src="@drawable/games_win2" />
	        
	        <TextView
	            android:id="@+id/profile_games_won_label_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_above="@+id/profile_games_won_iv"
	            android:gravity="center_horizontal"
	            android:text="@string/profile_games_won_label_tv" />
	        
	        <TextView
	            android:id="@+id/profile_games_won_count_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:layout_below="@+id/profile_games_won_iv"
	            android:text="@string/profile_games_won_count_tv" />
	        
	    </RelativeLayout>
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:padding="10dp"
	        >

	       	<ImageView
	       	    android:id="@+id/profile_time_spent_iv"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	   	android:layout_centerInParent="true"
	            android:adjustViewBounds="true"
	       	    android:src="@drawable/clock_icon2" />
	        
	        <TextView
	            android:id="@+id/profile_time_spent_label_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_above="@+id/profile_time_spent_iv"
				android:gravity="center_horizontal"
	            android:text="@string/profile_time_spent_label_tv" />
	        
	        <TextView
	            android:id="@+id/profile_time_spent_count_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:layout_below="@+id/profile_time_spent_iv"
	            android:text="@string/profile_time_spent_count_tv" />

	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:padding="10dp"
	        >

	        	        
	        <TextView
	            android:id="@+id/profile_num_workouts_label_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_above="@+id/profile_num_workouts_iv"
	            android:text="@string/profile_num_workouts_label_tv" 
	          	android:gravity="center_horizontal"/>
	        
	        <ImageView
	            android:id="@+id/profile_num_workouts_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:adjustViewBounds="true"
	            android:src="@drawable/thunderbold_icon" />
	        
	        <TextView
	            android:id="@+id/profile_num_workouts_count_tv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/profile_num_workouts_iv"
	            android:gravity="center_horizontal"
	            android:text="@string/profile_num_workouts_count_tv" />
	        
	    </RelativeLayout>
	</LinearLayout>	

</LinearLayout>
