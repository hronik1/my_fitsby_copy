<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/light_white"
    android:paddingBottom="5dp" >
    
   <ImageView
        android:id="@+id/list_item_public_leagues_creator "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:maxHeight="80dp"
        android:minHeight="80dp"
        android:maxWidth="80dp"
        android:minWidth="80dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/list_item_public_leagues_creator_text" />
   
   <TextView
        android:id="@+id/list_item_public_leagues_id "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="@string/list_item_public_leagues_id_text" />

    <TextView
        android:id="@+id/list_item_public_leagues_players"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:gravity="center" 
        android:textSize="15sp"
        android:layout_marginTop="8dp"        
        android:text="@string/list_item_public_leagues_players_text" />
    
   <RelativeLayout 
       android:layout_weight=".2"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:gravity="center" >
       
       <TextView
            android:id="@+id/list_item_public_leagues_wager_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        	android:textSize="15sp"            
            android:text="$" />
       <TextView
            android:id="@+id/list_item_public_leagues_wager"
            android:layout_toRightOf="@+id/list_item_public_leagues_wager_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/list_item_public_leagues_wager_text"
            android:textSize="15sp" />
   </RelativeLayout>

   	<RelativeLayout 
       android:layout_weight=".2"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:gravity="center" >
   	   <TextView
            android:id="@+id/list_item_public_leagues_pot_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$"
            android:textSize="15sp" />
   	   
       <TextView
            android:id="@+id/list_item_public_leagues_pot"
            android:layout_toRightOf="@+id/list_item_public_leagues_pot_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/list_item_public_leagues_pot_text"
            android:textSize="15sp" />
    </RelativeLayout>
    
   	<RelativeLayout 
       android:layout_weight=".2"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:gravity="center" >
       <TextView
            android:id="@+id/list_item_public_leagues_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/list_item_public_leagues_duration_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_item_public_leagues_leagues_duration_days"
            android:layout_toRightOf="@+id/list_item_public_leagues_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>