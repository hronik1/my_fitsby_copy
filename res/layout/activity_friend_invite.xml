<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/invite_friends_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/invite_friends_directions" />

    <ListView
        android:id="@+id/invite_friends_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_invite_button_invite"
        android:layout_above="@+id/or_invite_them_later_text"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/friend_invite_button_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_login_button"
        android:text="@string/friend_invite_button_home_text"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/or_invite_them_later_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friend_invite_button_home"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/or_invite_them_later_text" />

    <Button
        android:id="@+id/friend_invite_button_invite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/invite_friends_directions"
        android:layout_below="@+id/invite_friends_directions"
        android:background="@drawable/custom_login_button"
        android:text="@string/friend_invite_button_invite_text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white" />

</RelativeLayout>
