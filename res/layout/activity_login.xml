<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background"  >

    <TextView
        android:id="@+id/login_text"
        style="@style/white_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_email_id"
        android:layout_alignLeft="@+id/login_email_id"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
   	    android:layout_alignParentTop="true"
        android:text="@string/login_text" />
        
    <EditText
        android:id="@+id/login_email_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_textbox"
        android:fontFamily="sans"
        android:hint="@string/login_email_hint"
        android:inputType="textEmailAddress"
        tools:context=".LoginActivity" />

    <EditText
        android:id="@+id/login_password_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"        
        android:layout_below="@+id/login_email_id"
        android:background="@drawable/white_textbox"
        android:hint="@string/login_password_hint"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button_login"
        style="@style/white_font"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/login_password_id"      
        android:background="@drawable/custom_login_button"
        android:gravity="center"
        android:text="@string/login_button_login" />
   
   <CheckBox 
	    android:id="@+id/login_remember_me_checkbox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:button="@drawable/checkbox"
   	    android:layout_alignLeft="@+id/login_button_login"
	    android:layout_below="@+id/login_button_login"
	   	android:text="@string/login_remember_me_textview"
	    android:textColor="@color/white"
	    android:textSize="16sp" />

	<TextView
	    android:id="@+id/login_forgot_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/login_button_login"
	    android:layout_alignRight="@+id/login_button_login"
	    android:layout_below="@+id/login_remember_me_checkbox"
	    android:layout_marginTop="5dp"
	    android:clickable="true"	    
	    android:text="@string/login_forgot_password_text"
	    android:textColor="@color/white"
	    android:textSize="16sp" />

</RelativeLayout>

