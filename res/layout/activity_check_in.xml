<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white" >
   
    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="@string/colon"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"         
        android:textSize="40sp"
        android:paddingBottom="80dp"
        android:layout_centerVertical="true"/>
    
    <Button
        android:id="@+id/check_in_button_check_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"        
        android:layout_marginLeft="10dp"        
        android:layout_marginRight="10dp"     
        android:textSize="18sp"        
        android:background="@drawable/newsfeed_submit_button"
        android:text="@string/check_in_button_check_out_text"
        android:textColor="@color/white" />

     <TextView
        android:id="@+id/checkout_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_in_button_check_out"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"  
        android:textSize="12sp"                
        android:text="@string/checkout_directions"
        android:layout_alignRight="@+id/check_in_button_check_in"        
        android:layout_alignLeft="@+id/check_in_button_check_in"        
        android:gravity="center" />

     <Button
         android:id="@+id/check_in_button_check_in"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/colon"
         android:layout_centerHorizontal="true"
         android:background="@drawable/custom_login_button"         
         android:text="@string/check_in_button_check_in_text"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp" 
         android:textSize="18sp"       
         android:textColor="@color/white" />

     <ImageView
         android:id="@+id/check_in_iv"
         android:src="@drawable/red_x_mark"
         android:layout_alignTop="@+id/verified_gym"
         android:layout_alignLeft="@+id/check_in_button_check_in"
         android:layout_height="20dp"
         android:layout_width="20dp"
         android:contentDescription="@string/hello_world" />
     
     <TextView
         android:id="@+id/verified_gym"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/check_in_iv"
         android:layout_alignRight="@+id/check_in_button_check_in"
         android:layout_above="@+id/check_in_button_check_in"         
         android:text="@string/verified_gym"
         android:layout_marginLeft="5dp"         
         android:textStyle="bold"
         android:textSize="14sp" />

     <TextView
         android:id="@+id/seconds"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/colon"
         android:layout_alignBottom="@+id/colon"
         android:layout_toRightOf="@+id/colon"
         android:text="@string/seconds"
         android:layout_marginLeft="-6dp"   
         android:textSize="40dp"               
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/minutes"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/colon"
         android:layout_alignBottom="@+id/colon"
         android:layout_toLeftOf="@+id/colon"
         android:text="@string/minutes"
         android:layout_marginRight="5dp"
         android:textSize="40dp"
         android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
