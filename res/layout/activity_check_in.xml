<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_gradient_background" >
            
            <TextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:paddingBottom="80dp"
                android:text="@string/colon"
                android:textSize="40sp" />

            <Button
                android:id="@+id/check_in_button_check_out"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colon"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-70dp"
                android:background="@drawable/newsfeed_submit_button"
                android:text="@string/check_in_button_check_out_text"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/checkout_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/check_in_button_check_in"
                android:layout_alignRight="@+id/check_in_button_check_in"
                android:layout_below="@+id/check_in_button_check_out"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/checkout_directions"
                android:textSize="12sp" />

            <Button
                android:id="@+id/check_in_button_check_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/colon"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_login_button"
                android:text="@string/check_in_button_check_in_text"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/check_in_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/verified_gym"
                android:layout_alignLeft="@+id/check_in_button_check_in"
                android:layout_alignTop="@+id/verified_gym"
                android:contentDescription="@string/hello_world"
                android:padding="8dp"
                android:src="@drawable/red_x_mark" />

            <TextView
                android:id="@+id/verified_gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/check_in_button_check_in"
                android:layout_alignRight="@+id/check_in_button_check_in"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/check_in_iv"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="@string/verified_gym"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/colon"
                android:layout_alignBottom="@+id/colon"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/colon"
                android:text="@string/seconds"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/colon"
                android:layout_alignBottom="@+id/colon"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/colon"
                android:text="@string/minutes"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40dp" />

</RelativeLayout>
