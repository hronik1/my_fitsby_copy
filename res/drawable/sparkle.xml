<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/white"
                android:angle="270"
            	android:textColor="@color/gray" />
            <stroke
                android:width="2dp"
                android:color="@color/button_gray" />
            <corners
                android:radius="10dp"
  				android:bottomRightRadius="10dp"
  				android:bottomLeftRadius="0dp" 
  				android:topLeftRadius="0dp" 
  				android:topRightRadius="10dp"/> 
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />  				
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/button_gray"
                android:startColor="@color/button_gray"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/button_gray" />
            <corners
                android:radius="1dp"
  				android:bottomRightRadius="2dp"
  				android:bottomLeftRadius="0dp" 
  				android:topLeftRadius="2dp" 
  				android:topRightRadius="0dp"/> 
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/button_gray"
                android:startColor="@color/button_gray"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/button_gray" />
            <corners
                android:radius="10dp"
  				android:bottomRightRadius="10dp"
  				android:bottomLeftRadius="0dp" 
  				android:topLeftRadius="0dp" 
  				android:topRightRadius="10dp"/> 
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />           
        </shape>
    </item>
</selector>