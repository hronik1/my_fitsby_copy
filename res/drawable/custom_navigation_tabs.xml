<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/red"
                android:endColor="@color/fitsby_red"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_gray" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/button_gray"
                android:startColor="@color/button_gray"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_gray" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/gray"
                android:startColor="@color/button_gray"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="@color/gray" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>