<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitsby"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission android:name="com.example.fitsby.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="com.example.fitsby.permission.C2D_MESSAGE" /> 
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:name="com.example.fitsby.applicationsubclass.ApplicationUser"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/fitsby_logo"
        android:theme="@style/AppTheme" >

        <!-- Start of Crittercism.com Code -->
        <activity android:name="com.crittercism.NotificationActivity" />
        <!-- End of Crittercism.com Code -->

        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.example.fitsby.ExampleActivity"
            android:label="@string/title_activity_example" >
        </activity>
        <activity
            android:name="com.example.fitsby.LandingActivity"
            android:label="@string/title_activity_landing"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fitsby.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.LeagueLandingActivity"
            android:label="@string/title_activity_league_landing"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.LeagueCreateActivity"
            android:label="@string/title_activity_league_create"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.CreditCardActivity"
            android:label="@string/title_activity_credit_card"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.fitsby.FriendInviteActivity"
            android:label="@string/title_activity_friend_invite"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="t4jsample"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fitsby.LeagueJoinActivity"
            android:label="@string/title_activity_league_join"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.example.fitsby.GamesActivity"
            android:label="@string/title_activity_games"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.NewsfeedActivity"
            android:label="@string/title_activity_newsfeed"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.fitsby.CheckInActivity"
            android:label="@string/title_activity_check_in"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.MeActivity"
            android:label="@string/title_activity_me"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.fitsby.LeagueJoinDetailActivity"
            android:label="@string/title_activity_league_join_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.fitsby.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fitsby.LoggedinActivity"
            android:label="@string/title_activity_loggedin"
            android:theme="@style/StyledIndicators"
            android:screenOrientation="portrait" >
        </activity>
        
		<service android:name=".MessengerService"
        	android:process=":remote"
        	android:exported="false" />
		
		<receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.example.fitsby" />
            </intent-filter>

		</receiver>
		
		<service android:name=".GCMIntentService" />

        <service
            android:name="com.example.fitsby.MessengerService"
            android:exported="false"
            android:process=":remote" />

        <activity
            android:name="com.example.fitsby.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.example.fitsby.ShareCheckinActivity"
            android:label="@string/title_activity_share_checkin" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="t4jsamplecheckin"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fitsby.FirstTimeCheckinActivity"
            android:label="@string/title_activity_first_time_checkin"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
